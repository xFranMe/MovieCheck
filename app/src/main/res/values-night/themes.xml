<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Theme.MovieCheck" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_navigation</item> <!--Color de la App Bar-->
        <item name="colorPrimaryVariant">@color/black</item> <!-- Variación tonal de colorPrimary -->
        <item name="colorOnPrimary">@color/white</item> <!-- Color que pasa los test de accesibilidad al ser dibujado sobre colorPrimary -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_widgets</item> <!-- Color secundario que define la imagen de marca de la app, normalmente complementario a colorPrimary -->
        <item name="colorSecondaryVariant">@color/red_widgets_variant</item> <!-- Variación tonal de colorSecondary -->
        <item name="colorOnSecondary">@color/black</item> <!-- Color que pasa los test de accesibilidad al ser dibujado sobre colorSecondary -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_navigation</item> <!-- Color de la barra de estado (en la que aparece la hora, cobertura, batería, ...) -->
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/white_color_hint</item> <!--Color del texto que aparece por defecto (hint) en un EditText-->
        <item name="android:textColor">@color/white</item> <!--Color del texto de los TextView-->
        <item name="android:windowBackground">@color/gray_background</item> <!--Color del fondo de pantalla-->
        <item name="android:navigationBarColor">@color/black_navigation</item> <!-- Color de la barra de navegación -->
        <!-- Por defecto, el modo oscuro pinta la App Bar en negro. Se debe forzar a que use el color primario -->
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
    </style>
</resources>